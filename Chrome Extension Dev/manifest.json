{
    "manifest_version": 2,
   
    "name": "Baekjoon Online Judge Comments",
    "description": "Baekjoon Online Judge comments make program",
    "version": "1.0",
   
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "https://*.acmicpc.net/problem/*",
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.acmicpc.net/problem/*"
        ],
        "js": [
          "script.js"
        ],
        "css": [
          "style.css"
        ]
      }
    ]
  }